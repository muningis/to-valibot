{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Definitions With AllOf",
  "definitions": {
    "BaseEntity": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "createdAt"]
    },
    "ExtendedEntity": {
      "allOf": [
        {
          "$ref": "#/definitions/BaseEntity"
        }
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["name"]
    }
  },
  "properties": {
    "entity": {
      "$ref": "#/definitions/ExtendedEntity"
    }
  },
  "required": ["entity"]
}
